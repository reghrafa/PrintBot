<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="NormalText">
    <item name="android:capitalize">characters</item>
    <item name="android:typeface">monospace</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#000000</item>
  </style>
  <style name="CodeText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:textColor">@android:color/white</item>
  </style>
  <style name="BlockLayout">
    <item name="android:orientation">horizontal</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">10dp</item>
  </style>
  <style name="LoopBlockLayout" parent="BlockLayout">
    <item name="android:background">@drawable/block_purple_bg</item>
  </style>
  <style name="IfBlockLayout" parent="BlockLayout">
    <item name="android:background">@drawable/block_orange_bg</item>
  </style>
  <style name="CommandBlockLayout" parent="BlockLayout">
    <item name="android:background">@drawable/block_red_bg</item>
  </style>
  <style name="VarBlockLayout" parent="BlockLayout">
    <item name="android:background">@drawable/block_green_bg</item>
  </style>
  <style name="Button">
    <item name="android:layout_width">100dp</item>
    <item name="android:background">@drawable/buttoncolour</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor" >#ffffff</item>
    <item name="android:gravity" >center</item>
    <item name="android:layout_margin" >3dp</item>
    <item name="android:textSize" >20dp</item>
    <item name="android:textStyle" >bold</item>
    <item name="android:shadowColor" >#000000</item>
    <item name="android:shadowDx" >1</item>
    <item name="android:shadowDy" >1</item>
    <item name="android:shadowRadius" >2</item>
  </style>
  <style name="Button_basic">
    <item name="android:background">@android:color/transparent</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">30dp</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:gravity">center</item>
    <item name="android:shadowColor">@android:color/transparent</item>
    <item name="android:stateListAnimator">@null</item>
  </style>
  <style name="delete_block_button">
    <item name="android:layout_width">50dp</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:src">@drawable/dustbin</item>
    <item name="android:padding">10dp</item>
  </style>
  <style name="delete_block_button_red">
    <item name="android:layout_width">50dp</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:src">@drawable/dustbin_red</item>
    <item name="android:padding">10dp</item>
  </style>
</resources>